{
  "compilerOptions": {
  "composite": true,

    "declarationMap": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["ES2022", "DOM"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "customConditions": ["@org/source"]
  }
}
